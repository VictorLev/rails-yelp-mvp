
<div class="d-flex justify-content-between p-4 bg-secondary bg-gradient align-items-center">
  <h1>WannabeYelp</h1>
  <div>
    <%= link_to "Add a Restaurant", new_restaurant_path, class: "btn btn-light" %>
  </div>

</div>
<div class="container mt-2 mb-5">
  <h2>Restaurant Lists :</h2>
  <div class="w-50">
    <ul class="list-group">
    <% @restaurants.each do |restaurant|%>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <div class="fs-4">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "index-link text-secondary" %>
          </div>
          <div>
            <%= restaurant.category %>
          </div>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
</div>
